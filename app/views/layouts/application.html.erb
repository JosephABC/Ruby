<!DOCTYPE html>
<html>
  <head>
    <title>ToDo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/3a45995daa.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Checklist", root_path, class: "navbar-brand" %>

        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Sign Up", new_user_registration_path  %></li>
          <% if current_user.present? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
          <% if user_signed_in? %>
            <li><%= link_to "New Item", new_item_path, class: "navbar-text navbar-link navbar-right" %></li>
          <% end %>
          <li><%= form_tag(items_path, :method => "get", id: "search-form", class: "navbar-form navbar-right") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Item", class: "form-control" %>
          <%= submit_tag "Search", class: "btn btn-default" %>
          <% end %></li>
        </ul>

      </div>

    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>


  </body>
</html>
